{% extends "layout.html.twig" %}
{% block body %}
    <form action=""  method="post"  class="form-horizontal">
        {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ bootstrap_set_widget_col(4) }}
        {{ bootstrap_set_label_col(2) }}
        <div class="panel panel-info">
            <div class="panel-heading">Head of Household</div>
            <div class="panel-body">
                {{ form_row(formHead.fname) }}
                {{ form_row(formHead.sname) }}
                {{ form_row(formHead.dob) }}
                {{ form_row(formHead.sex) }}
                {{ form_row(formHead.ethnicity) }}
            </div>
            <div class="panel-heading">Household</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-3">
                        <div>{{ form_label(form.center) }}</div>
                        <div>{{ form_widget(form.center) }}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div>{{ form_label(form.arrivalmonth) }}</div>
                        <div>{{ form_widget(form.arrivalmonth) }}</div>
                    </div>
                    <div class="col-sm-3">
                        <div>{{ form_label(form.arrivalyear) }}</div>
                        <div>{{ form_widget(form.arrivalyear) }}</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                        <div>{{ form_label(form.compliance) }}</div>
                        <div>{{ form_widget(form.compliance) }}</div>
                    </div>
                    <div class="col-sm-3">
                        <div>{{ form_label(form.complianceDate) }}</div>
                        <div>{{ form_widget(form.complianceDate) }}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div>{{ form_label(form.shared) }}</div>
                        <div>{{ form_widget(form.shared) }}</div>
                    </div>
                    <div class="col-sm-3">
                        <div>{{ form_label(form.sharedDate) }}</div>
                        <div>{{ form_widget(form.sharedDate) }}</div>
                    </div>
                </div>

            </div>
        </div>
        <div class="panel-body"> <input class="btn-sm btn-info" name="submit" type="submit"  value="Submit"> 
            <input class="btn-sm btn-info" type="reset" value=" Reset ">
        </div>
    </form>
{% endblock %}


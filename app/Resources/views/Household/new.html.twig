{% extends "layout.html.twig" %}
{% block body %}
    <form action=""  method="post"  class="form-horizontal">
        {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ bootstrap_set_widget_col(4) }}
        {{ bootstrap_set_label_col(2) }}
        <div class="panel panel-info" style="width:80%; margin-left: 10%;">
            <div class="panel-heading">Head of Household</div>
            <div class="panel-body">
                {{ form_row(formHead.fname) }}
                {{ form_row(formHead.sname) }}
                {{ form_row(formHead.dob) }}
                {{ form_row(formHead.sex) }}
                {{ form_row(formHead.ethnicity) }}
            </div>
            <div class="panel-heading">Household</div>
            <div class="panel-body">
                {{form_row(form.center) }}
            </div>
            <div class="panel-body"> <input class="btn-sm btn-info" name="submit" type="submit"  value="Submit"> 
                <input class="btn-sm btn-info" type="reset" value=" Reset ">
            </div>
        </div>
    </form>
{% endblock %}


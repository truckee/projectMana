{% extends "layout.html.twig" %}
{% block body %}
    <form action="{{ path("contacts_add", {'source': source}) }}" method="post">
        <div class="row">
            <div class="col-sm-4">
                <h3>{{ label_info('Add contacts from '~source) }}</h3>
                <p>{{ form_row(form.contactDate) }}</p>
                <p>{{ form_row(form.contactdesc) }}</p>
                <p>{{ form_row(form.center)}}</p>
                <div id="dialog" title="Collecting data" style="font-size: 10pt;">Please wait while data being gathered</div>
                <div id="householdById">
                    <p>{{ form_row(form.householdId)}}</p>
                    <button class="btn-sm btn-info" type="button" id="contact_household_button">Add household</button>
                </div>
            </div>
            <div class="col-sm-8" id="contact_form">
            </div>
        </div>
    </form>
{% endblock %}
        {% block javascripts %}
            {{ parent() }}
            <script src="{{ asset('js/newContacts.js') }}"></script>
        {% endblock %}


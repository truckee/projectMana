<div class="panel panel-info">
    <div class="panel-heading">
        <div class="text-center">
            Households receiving services
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-1">Service</div>
            <div class="col-sm-1 text-right">Count</div>
            <div class="col-sm-10">Households</div>
        </div>
        {% for key, households in receivingServices %}
            <div class="row">
                <div class="col-sm-1">{{ key }}</div>
                <div class="col-sm-1 text-right">{{ households|length }}</div>
                <div class="col-sm-10">
                    {% for household in households %}
                        {{  household }}, 
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>

</div>

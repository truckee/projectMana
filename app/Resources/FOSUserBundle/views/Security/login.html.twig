{% extends 'ManaClientBundle:Default:layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
        <div id="wrap">
            <div id="header"> <img class="imgLogo" src="{{ asset('/images/mana-banner.gif') }}" alt="Project MANA">

                <p class="headerText"><h3 class="title">Project M.A.N.A. Client Database</h3>
                <h5 class="title">Serving more than 90,000 meals per year to North Lake Tahoe
                    and Truckee communities.</h5>
            </div>
            {% endblock body %}
{% block fos_user_content %}
    <div class="row"><h4>Welcome.  Please sign in.</h4></div>
    {% if error %}
        <div>{{ label_warning(error.messageKey|trans(error.messageData, 'security')) }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-inline">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
                        <!--<label for="username" class="form-control">{{ 'security.login.username'|trans }}</label>-->
            <input type="text" id="username" placeholder="{{ 'security.login.username'|trans }}" name="_username" value="{{ last_username }}" required="required" />
        </div>
        <div class="form-group">
                      <!--<label for="password" class="form-control">{{ 'security.login.password'|trans }}</label>-->
            <input type="password" id="password" placeholder="{{ 'security.login.password'|trans }}" name="_password" required="required" />
        </div>
        <br/>
        <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <br/>
        <input class="btn btn-default btn-xs active btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />



        <a class="btn btn-default btn-xs active btn-primary" href="{{ path("fos_user_resetting_request") }}">Forgot password?</a>


    </form>
{% endblock fos_user_content %}

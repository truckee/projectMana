{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <h4>{{ label_info('Reset password') }}</h4>
    <div class="col-md-3">
        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
            {{ form_widget(form) }}
            <div>
                <input class="btn btn-primary btn-xs active" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
            </div>
        </form>
    </div>
</div>

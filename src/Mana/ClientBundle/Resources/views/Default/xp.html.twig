{% extends 'ManaClientBundle:Default:bootstrap_layout.html.twig' %}
{% block content %}
{%- set rowLabel = fields.rowLabel -%}
{%- set colLabel = fields.colLabel -%}
<h3 style="text-align: center;">{{ reportTitle }}</h3>
<h4 style="text-align: center;">{{ reportSubTitle }} {{date|date("m/d/Y")}}</h4>
<table class="table table-striped table-condensed">
    <thead>
    <tr>
        <th>{{ rowHeader }}
        {%- for c in colKeys -%}
            <th style="text-align: right;">{{ attribute(c, colLabel) }} </th>
            {%- endfor -%}
            <th style="text-align: right;">Total</th>
    </tr>
    <tfoot>
    <tr>
        <td>Total
            {% for total in profile.total %}
            <td style="text-align: right">{{ total }}
                {% endfor %}
    <tbody>
    {% for r in rowKeys -%}
        <tr>
            <td>{{ attribute(r, rowLabel) }}
                {%- for c in colKeys -%}
                    <td style="text-align: right">
                    {%- if profile[attribute(r, rowLabel)][attribute(c, colLabel)] is defined -%}
                    {{ profile[attribute(r, rowLabel)][attribute(c, colLabel)]|format() }}{%- else -%}
                    0{%- endif -%}
                    
                {% endfor %}
        <td style="text-align: right">{{ profile[attribute(r, rowLabel)]['total']|format() }}
        </tr>
    {%- endfor -%}
</table>
{% endblock %}

{% extends "ManaClientBundle:Default:layout.html.twig" %}
{% block body %}
    <div class="panel panel-info">
        <div class="panel-heading">Household Edit<br>
            {% include 'ManaClientBundle:Household:householdHeading.html.twig' %}; Date added: {% if household.dateAdded is not null %}{{ household.dateAdded|date('m/d/Y') }}<input type="hidden" name="household[dateAdded]" value="{{ household.dateAdded|date('m/d/Y') }}">{% endif %}
        </div>
        <div class="panel-body">
            <form action="{{ path('household_edit', { 'id': household.id }) }}" method="post">
                {% include "ManaClientBundle:Member:memberShowBlock.html.twig" %}
                {% include "ManaClientBundle:Address:addressBlock.html.twig" %}
                {% include "ManaClientBundle:Household:householdEditBlock.html.twig" %}
                <div align="center"><input class="btn-sm btn-info" type="submit" value="Submit">
                    <input class="btn-sm btn-info" type="reset"></div>
            </form>
        </div>
    </div>
{% endblock %}

{% extends "ManaClientBundle:Default:layout.html.twig" %}

{% block body %}
    {# basic report selection criteria; builds where clause  #}
    <div class="title">{{ criteriaHeader }}</div>
    <form action="{{ path(formPath) }}" method="post">
        {{ form_errors(form.startMonth) }}
        {{ form_errors(form) }}
        <div  class="body">
            {% include "ManaClientBundle:Statistics:dateCriteria.html.twig" %}
            {% if extra == 'general' %}
                {% include "ManaClientBundle:Statistics:typeLocationCriteria.html.twig" %}
            {% endif %}
            {% if extra == 'profile' %}
                {% include "ManaClientBundle:Statistics:profileCriteria.html.twig" %}
            {% endif %}
            <br>
            <div align="center"><input class="smallbutton" type="submit" name="submit" value="Submit"></div>
        </div>
    </form>
{% endblock %}

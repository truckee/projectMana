{% extends 'ManaClientBundle:Default:layout.html.twig' %}
{% block body -%}
<div class="title">Offence listing</div>
<div class="width40">
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Offence</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('offence_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.offence }}</td>
                <td>{% if entity.enabled %}Yes{%else%}No{%endif%}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('offence_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('offence_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('offence_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>
{% endblock %}

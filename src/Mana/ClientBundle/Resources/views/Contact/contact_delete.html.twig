{% extends "ManaClientBundle:Default:layout.html.twig" %}

{% block body %}
<div class="title">{{ title }} for {{ contact.household.head.fname }} {{ contact.household.head.sname }}</div>
<form action="{{ path("contact_delete", {'id': contact.id }) }}" method="post">
    <table class="width40">
        <tr>
            <td><b>Date</b><td>{{ contact.contactDate|date('m/d/Y') }}</td>
            <tr>
            <td><b>Type</b><td>{{contact.contactDesc.contactDesc }}</td>
            <tr>
            <td><b>County</b><td>{% if contact.center is not empty %}{{ contact.center.county.county }}{% else %}{{ contact.county.county }}{% endif %}</td>
            <tr>
            <td><b>Site</b><td>{% if contact.center is not null %}{{ contact.center.center }}{% endif %}</td>
        <tr>
            <td><input type="submit" name="submit" value="Delete contact"> </td>
            <td><input type="reset" name="reset" value="Cancel" onclick="history.go(-1);return false;"></div></td>
    </table>
            
</form>
{% endblock %}
{% extends "ManaClientBundle:Default:layout.html.twig" %}
{% block body %}
    <div class="panel panel-info">
        <div class="panel-heading">Select site for contact list</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-3">
                    <form action="{{ path("center_select") }}" method="post">
                        {{ form_row(form.center, {label:'Site: '}) }}
                        <br>
                        <input type="submit" name="submit" value="Submit">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
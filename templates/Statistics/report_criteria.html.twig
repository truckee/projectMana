{% extends "base.html.twig" %}
{% block body %}
    <div class="card">
        <div class="card-header bg-primary text-white">{{ criteriaHeader }}</div>
        <div class="card-body">
            <form action="{{ path(formPath) }}" method="post">
                {% for template in criteriaTemplates %}
                    {{ include(template) }}
                {% endfor %}
                <br>
                {{ form_row(form._token) }}
                <div align="center"><input class="btn-sm btn-info" type="submit" name="submit" value="Submit"></div>
            </form>
        </div>
    </div>
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('reports') }}
    {% endblock %}
{% endblock %}

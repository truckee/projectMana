{% extends "base.html.twig" %}
{% block body %}
    <div class="card">
        <div class="card-header bg-primary text-white">Select site for {{ source }} contact list</div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3">
                    <form action="{{ path("latest_contacts", {'source': source}) }}" method="post">
                        {{ form_row(form.center, {label:'Site: '}) }}
                        {{ form_row(form._token) }}
                        <br>
                        <input class="btn-sm btn-info" type="submit" name="submit" value="Submit">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends "base.html.twig" %}
{% block body %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.css" />
    {% endblock %}
    <div class="card w-100 p-3">
        <div class="card-header bg-primary mb-3 text-white">New Household</div>

        <form action=""  method="post"  class="form-inline">
            <div class="card w-100 p-3">
                <div class="card-header bg-info">Head of Household</div>
                <div class="card-body">
                    <div class="form-row mb-3">
                        <div class="col">
                            {{ form_widget(formHead.fname) }}
                            {{ form_errors(formHead.fname) }}
                        </div>
                        <div class="col">
                            {{ form_widget(formHead.sname) }}
                            {{ form_errors(formHead.sname) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            {{ form_widget(formHead.dob) }}
                            {{ form_errors(formHead.dob) }}
                        </div>
                        <div class="col">
                            {{ form_widget(formHead.sex) }}
                            {{ form_errors(formHead.sex) }}
                        </div>
                        <div class="col">
                            {{ form_widget(formHead.ethnicity) }}
                            {{ form_errors(formHead.ethnicity) }}
                        </div>
                    </div>
                </div>
                <div class="card-header bg-info">Household</div>
                <div class="card-body">
                    <div class="form-row mb-3">
                        <div class="col">
                            {{ form_widget(form.center) }}
                            {{ form_errors(form.center) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.arrivalmonth) }}
                        </div>
                        <div class="col">
                            {{ form_widget(form.arrivalyear) }}
                        </div>
                    </div>
                    <div class="form-row mb-3 align-text-bottom">
                        <div class="col">
                            Compliance: {{ form_widget(form.compliance) }}
                        </div>
                        <div class="col">
                            Shared: {{ form_widget(form.shared) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            Compliance date: {{ form_widget(form.complianceDate) }}
                        </div>
                        <div class="col-6">
                            Shared date: {{ form_widget(form.sharedDate) }}
                        </div>
                    </div>
                </div>
                <div class="card-body"> 
                    {{ form_row(form._token) }}
                    {{ form_row(formHead._token) }}
                    <input class="btn-sm btn-info" name="submit" type="submit"  value="Submit"> 
                    <input class="btn-sm btn-info" type="reset" value=" Reset ">
                </div>
            </div>
        </form>
    </div>
    {% block javascripts %}
        {{ parent() }}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.js"></script>
        <script>
            $(document).ready(function () {
                $('.js-datepicker').datepicker({
                    format: 'mm/dd/yyyy'
                });
            });
        </script>
    {% endblock javascripts %}
{% endblock %}
